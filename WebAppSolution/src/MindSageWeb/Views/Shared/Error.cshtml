@{
    ViewData["Title"] = "Error";
}

<div class="grid-block">
    <div class="medium-6 large-4 grid-container">
        <h1 class="text-danger">Error.</h1>
        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
        }
    </div>
</div>