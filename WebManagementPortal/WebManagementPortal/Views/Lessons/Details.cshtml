<h2>Advertisements</h2>

@{ 
    var adsRunner = 1;
}
<p>
    @Html.ActionLink("Create new advertisement", "Create", "Advertisements", new { @id = Model.Id }, null)
</p>
<table class="table">
    <tr>
        <th>
            No
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Advertisements.Where(it => !it.RecLog.DeletedDate.HasValue))
    {
        <tr>
            <td>
                @adsRunner
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Advertisements", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Advertisements", new { id = item.Id }, null)
            </td>
        </tr>
        adsRunner++;
    }

</table>