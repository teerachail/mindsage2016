@model WebManagementPortal.EF.AssessmentItem

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(it => it.PostLessonId)

    <div class="form-horizontal">
        <h4>Post-Assessment Item</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.PostLesson.Unit.Semester.CourseCatalog.SideName, "CourseCatalog", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label(Model.PostLesson.Unit.Semester.CourseCatalog.SideName, htmlAttributes: new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.PostLesson.Unit.Semester.CourseCatalog.SideName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostLesson.Unit.Semester.Title, "Semester", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label(Model.PostLesson.Unit.Semester.Title, htmlAttributes: new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.PostLesson.Unit.Semester.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostLesson.Unit.Id, "Unit", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label(Model.PostLesson.Unit.Title, htmlAttributes: new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.PostLesson.Unit.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostLesson.Title, "Lesson", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label(Model.PostLesson.Title, htmlAttributes: new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.PostLesson.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsPreviewable, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsPreviewable)
                    @Html.ValidationMessageFor(model => model.IsPreviewable, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Details", "Lessons", new { @id = Model.PostLessonId }, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
