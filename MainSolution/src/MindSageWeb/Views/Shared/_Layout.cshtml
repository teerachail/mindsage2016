<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MindSageWeb</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/assets/css/app.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/assets/css/app.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/assets/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

    <div class="top-bar" data-topbar role="navigation">
        <div class="row">
            <div class="top-bar-left">
                <ul class="menu">
                    <li class="menu-text"><img width="160" src="http://www.mindsage.org/assets/img/logo.png"></li>
                </ul>
            </div>
            <div class="top-bar-right">
                <ul class="menu">

                    <li class="has-form">
                        <a class="button radius" href="#">LOGIN</a>
                    </li>
                    <li class="has-form">
                        <a class="button radius outline" href="#">SIGNUP</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

    <footer class="footer">
        <div class="row">
            <div class="large-2 column">
                <img class="thumbnail" src="http://placehold.it/100x100">
            </div>
            <div class="small-10 row columns">
                <br />
                <br />
                <p class="links">
                    <a href="#">Home</a>
                    <a href="#">Blog</a>
                    <a href="#">Pricing</a>
                    <a href="#">About</a>
                    <a href="#">Faq</a>
                    <a href="#">Contact</a>
                </p>
            </div>

        </div>
    </footer>

    <environment names="Development">
        <script src="~/assets/js/app.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/assets/js/app.js" asp-append-version="true"></script>
        <script src="~/assets/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>