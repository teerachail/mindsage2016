@using MindSageWeb.ViewModels.PurchaseCourse
@model MindSageWeb.ViewModels.PurchaseCourse.PurchaseCourseConfirmViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row content-section main-section-hight">
    <div class="medium-6 medium-centered large-6 large-centered columns">
        <h4>Payment Detail</h4>
        <div class="callout clearfix">
            <div class="columns">
                <div class="float-left"><img width="100" src="https://www.paypalobjects.com/webstatic/mktg/Logo/pp-logo-200px.png" /></div>
                <div class="float-right"><h5>@Model.TotalChargeAmount.ToString("C2")</h5></div>
            </div>
            <hr />
           
            <div class="columns">
                <h5>Billing Address</h5>
                <address>
                    @Model.PrimaryAddress.AddressSummary
                </address>
            </div>
            <hr />
            <div class="columns">
                <h5>Pay With</h5>
                <div class="float-left"><h5><i class="fi-credit-card"></i> @Model.CreditCardInfo.CardType x-@Model.CreditCardInfo.LastFourDigits</h5></div>
                <div class="float-right"><h5>@Model.TotalChargeAmount.ToString("C2")</h5></div>
            </div>
            <div class="column">
                <form asp-controller="purchase" asp-action="confirm" method="post" role="form">
                    <button type="submit" class="button large expanded">Pay now</button>
                </form>
            </div>
        </div>
    </div>
</div>