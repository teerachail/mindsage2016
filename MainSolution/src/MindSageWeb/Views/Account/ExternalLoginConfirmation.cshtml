@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row content-section main-section-hight">
    <div class="medium-6 medium-centered large-4 large-centered columns">
        <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <h4>Associate your @ViewData["LoginProvider"] account.</h4>
            <hr />
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
            <p class="text-info">
                You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                Please enter a user name for this site below and click the Register button to finish
                logging in.
            </p>
            <label asp-for="Email" class="col-md-2 control-label">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </label>
            <button type="submit" class="button expanded">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
